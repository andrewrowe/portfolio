@using System.Web.Mvc.Html
@using HumanResourcesWebsite.Models
@model HumanResourcesWebsite.Models.Job

@{
    ViewBag.Title = "AddJob";
}

<div class="row">
    <div class="col-xs-12 col-sm-9">
        <h2>Add Job</h2>  
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-9">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <form class="form-horizontal">
                @Html.HiddenFor(m => m.JobStatus)
                @Html.HiddenFor(m => m.Id)
                <div class="form-group">
                    <p>@Html.ValidationMessageFor(m => m.Title)</p>
                    @Html.DisplayNameFor(m => m.Title)
                    @Html.TextBoxFor(m => m.Title, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    <p>@Html.ValidationMessageFor(m => m.Description)</p>
                    @Html.DisplayNameFor(m => m.Description)
                    @Html.TextAreaFor(m => m.Description, new {@class = "form-control"})
                </div>
                <button class="btn btn-primary">Save</button>
            </form>
        }
    </div>
</div>
