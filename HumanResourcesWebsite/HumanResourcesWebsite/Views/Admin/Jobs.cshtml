@model List<HumanResourcesWebsite.Models.Job>

@{
    ViewBag.Title = "Jobs";
}

<div class="row">
    <div class="col-xs-12 col-sm-9">
        <h2>Jobs</h2>  
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-9">
        <p>@Html.ActionLink("Add Job", "AddJob", "Admin", null, new {@class = "btn btn-primary"})</p>
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Position</th>
                <th>Description</th>
                <th>Availability</th>
                <th colspan="2">Options</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var job in Model)
            {
                <tr>
                    <td>@job.Title</td>
                    <td>@job.Description</td>
                    <td>@job.JobStatus</td>
                    <td>@Html.ActionLink("Edit", "EditJob", "Admin", new {id = job.Id}, null)</td>
                    <td>@Html.ActionLink("Delete", "DeleteJob", "Admin", new {id = job.Id}, null)</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
