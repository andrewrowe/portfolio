@model HumanResourcesWebsite.Models.Applicant

@{
    ViewBag.Title = "SelectApplicant";
}

<div class="row">
    <div class="col-xs-12 col-sm-9">
        <h2>@Model.FirstName @Model.LastName's Information</h2>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-9">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>DOB</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Job(s) Wanted</th>
                    <th>Date Applied</th>
                    <th>Application Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.DateOfBirth.Date.ToString("MM/dd/yy")</td>
                    <td>@Model.Email</td>
                    <td>@Model.Phone</td>
                    <td>
                        @foreach (var job in Model.JobApplied)
                    {
                        @job.Title;
                    }
                </td>
                <td>@Model.DateOfApplication.Date.ToString("MM/dd/yy")</td>
                <td>@Model.ApplicantStatus</td>
                <td>@Html.ActionLink("View Resume", "SelectResume", "Admin", new { id = Model.Id }, null)</td>
                <td>@Html.ActionLink("Edit", "EditApplicant", "Admin", new { id = Model.Id }, null)</td>
                <td>@Html.ActionLink("Delete", "DeleteApplicant", "Admin", new { id = Model.Id }, null)</td>
              </tr>
            </tbody>
        </table>
    </div>
</div>